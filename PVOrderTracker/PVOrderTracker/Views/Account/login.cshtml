@{
    Layout = "_LoginLayout";
}

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-image: url('/background.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-box {
        background: rgba(255, 255, 255, 0.15); /* translucent white */
        backdrop-filter: blur(12px); /* main blur effect */
        -webkit-backdrop-filter: blur(12px); /* Safari support */
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3); /* frosted border */

        padding: 40px;
        width: 100%;
        max-width: 400px;
        color: #fff; /* optional: white text inside the box */
    }


    .form-control:focus {
        border-color: #2196f3;
        box-shadow: 0 0 0 0.2rem rgba(33, 150, 243, 0.25);
    }

    .btn-primary {
        background-color: #2196f3;
        border-color: #2196f3;
    }

        .btn-primary:hover {
            background-color: #1976d2;
            border-color: #1976d2;
        }

    .form-title {
        font-weight: 600;
        font-size: 28px;
        color: white;
        text-align: center;
        margin-bottom: 25px;
    }

    footer.border-top.footer.text-muted {

        position: fixed;
        bottom: 14px;
        padding-top: 10px;
        width: 100%;
    }

    .container-footer {
        display: flex;
        justify-content: center;}
</style>

<div class="login-box">
    <div class="form-title">Admin Login</div>

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" id="username" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" required />
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>
